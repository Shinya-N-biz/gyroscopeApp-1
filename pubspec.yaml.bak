name: gyroscope_app
description: A gyroscope ball movement demo app
publish_to: 'none'

version: 1.0.0+1

environment:
  sdk: '>=3.0.0 <4.0.0'

dependencies:
  flutter:
    sdk: flutter
  cupertino_icons: ^1.0.2
  sensors_plus: ^4.0.2
  vibration: ^1.8.4
  audioplayers: 5.1.0  # 古いバージョンを明示的に指定（互換性のため）
  audioplayers_darwin: ^5.0.2
  shared_preferences: ^2.2.2  # 追加: 設定保存用パッケージ
  # ロギング用パッケージ追加
  logging: ^1.2.0

dev_dependencies:
  flutter_test:
    sdk: flutter
  flutter_lints: ^2.0.0

flutter:
  uses-material-design: true
  
  # 画像アセットを追加
  assets:
    - assets/images/
    - assets/audio/  # 追加: 音楽ファイル用ディレクトリ
